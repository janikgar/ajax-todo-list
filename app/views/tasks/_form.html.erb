  <%= form_with(model: @task, remote: true) do |form| %>
    <div class="form-group">
      <%= form.text_field :description, placeholder: "Describe your task!", class: "form-control" %>
      <%= form.text_field :deadline, id: "datetimepicker1", placeholder: "Due Date", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.button :Submit, class: "btn btn-primary" %>
    </div>
  <% end %>